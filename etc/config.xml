<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='urn:magento:module:Magento_Store:etc/config.xsd'
>
    <default>
		<df_payment>
			<klarna>
				<actionForNew>review</actionForNew>
				<actionForReturned>authorize_capture</actionForReturned>
				<askForBillingAddress>1</askForBillingAddress>
<!--
	2016-11-16
	«A custom description for the charge. This value can be searched for in your dashboard.»
	https://www.omise.co/charges-api#charges-create
-->
				<description>{order.id}</description>
				<payment_action>authorize_capture</payment_action>
				<title>Klarna</title>
				<title_backend>Klarna</title_backend>
			</klarna>
		</df_payment>
        <payment>
            <dfe_klarna>
				<model>Dfe\Klarna\Method</model>
            </dfe_klarna>
        </payment>
    </default>
</config>
